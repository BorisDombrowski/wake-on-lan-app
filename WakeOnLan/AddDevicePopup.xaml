<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="WakeOnLan.AddDevicePopup">

    <VerticalStackLayout>
        <Label Text="Device name"/>
        <Entry Placeholder="My device" x:Name="NameEntry"/>

        <Label Text="IP address" />
        <Entry Placeholder="192.168.0.101" x:Name="IPEntry" />

        <Label Text="Port" />
        <Entry Placeholder="9" Keyboard="Numeric" x:Name="PortEntry"/>

        <Label Text="MAC" />
        <Entry Placeholder="A0:B1:C2:D3:E4:F5" TextChanged="MaskedEntryTextChanged" x:Name="MacEntry">
            <Entry.Behaviors>
                <toolkit:MaskedBehavior Mask="XX:XX:XX:XX:XX:XX" />
            </Entry.Behaviors>
        </Entry>

        <Button Text="Add" Clicked="AddConfirmationClicked" />

    </VerticalStackLayout>

</toolkit:Popup>

